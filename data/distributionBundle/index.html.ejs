<html class="no-javascript" lang="en">
    <head>
        <meta charset="utf-8">
        <%_ if (
            2 < configuration.givenCommandLineArguments.length &&
            ['serve', 'test', 'test:browser'].includes(
                configuration.givenCommandLineArguments[2]
            )
        ) { _%>
            <!--Prevent browser caching-->
            <meta http-equiv="cache-control" content="no-cache">
            <meta http-equiv="expires" content="0">
            <meta http-equiv="pragma" content="no-cache">
            <title><%- configuration.name %> - test</title>
        <%_ } else { _%>
            <title><%- configuration.name %></title>
        <%_ } _%>
        <script>
            window.document.documentElement.className =
                window.document.documentElement.className.replace(
                    /(^|\s)no-javascript(\s|$)/, '$1javascript$2');
        </script>
    </head>
    <body class="no-javascript">
        <script>
            window.document.body.className =
                window.document.body.className.replace(
                    /(^|\s)no-javascript(\s|$)/, '$1javascript$2');
        </script>
    </body>
</html>
